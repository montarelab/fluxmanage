{
  "ReverseProxy": {
    "Routes": {
      "task-write-route": {
        "ClusterId": "task-write-cluster",
        "RateLimiterPolicy": "FixedRatePolicy",
        "Match": {
          "Path": "task-write/{**catch-all}"
        }
      },
      "task-read-route": {
        "ClusterId": "task-read-cluster",
        "RateLimiterPolicy": "FixedRatePolicy",
        "Match": {
          "Path": "task-read/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "RateLimiterPolicy": "FixedRatePolicy",
        "Match": {
          "Path": "auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "task-write-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://task-write:8001"
          }
        }
      },
      "task-read-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://task-read:8002"
          }
        }
      },
      "auth-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://auth:8003"
          }
        }
      }
    }
  }
}
